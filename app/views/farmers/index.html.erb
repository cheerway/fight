<p id="notice"><%= notice %></p>

<h1>雞農清單</h1>

<table class="table">
  <thead>
    <tr>
      <th>名稱</th>
      <th>電話</th>
      <th>組別</th>
      <th>代號</th>
      <th>備註</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @men.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.telephone %></td>
        <td><%= customer.group %></td>
        <td><%= customer.code %></td>
        <td><%= customer.other %></td>
        <td><%= link_to '詳細資料', customer %></td>
        <td><%= link_to '編輯', edit_customer_path(customer) %></td>
        <td><%= link_to '刪除', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


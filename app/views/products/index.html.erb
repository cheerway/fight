
<h1>產品列表</h1>

<table class="table">
  <thead>
    <tr>
      <th>產品名稱</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= link_to '詳細資料', product %></td>
        <td><%= link_to '編輯', edit_product_path(product) %></td>
        <td><%= link_to '刪除', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新增產品', new_product_path %>

<p id="notice"><%= notice %></p>

<h1>人員清單</h1>

<table class="table">
  <thead>
    <tr>
      <th>名稱</th>
      <th>電話</th>
      <th>備註</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @men.each do |man| %>
      <tr>
        <td><%= man.name %></td>
        <td><%= man.phone %></td>
        <td><%= man.comment %></td>
        <td><%= link_to '詳細資料', man %></td>
        <td><%= link_to '編輯', edit_man_path(man) %></td>
        <td><%= link_to '刪除', man, method: :delete, data: { confirm: '是否確定刪除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

